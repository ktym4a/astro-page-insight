---
import type { ColorType } from "@/types/index";

interface Props {
	baseColor: ColorType;
	text: string;
	id: string;
}

const { baseColor, text, id } = Astro.props;
---

<h2
    class={`break-words -mt-8 pt-8 text-xl font-bold before:content-['##'] before:text-ctp-text before:pr-3 md:text-2xl ${baseColor.text}`}
    id={id}>{text}</h2
>
