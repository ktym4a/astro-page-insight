---
import Tag from "@/components/atoms/Tag.astro";
import type { ColorType } from "@/types/index";

interface Props {
	baseColor: ColorType;
	text: string;
	id: string;
}

const { baseColor, text, id } = Astro.props;
---

<Tag text='Title'>
    <h1
        class={`break-words -mt-8 pt-8 text-2xl font-bold before:content-['#'] before:text-ctp-text before:pr-3 md:text-4xl ${baseColor.text}`}
        id={id}>{text}</h1
    >
</Tag>
