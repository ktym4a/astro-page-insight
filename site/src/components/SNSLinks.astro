---
import Link from "@/components/atoms/Link.astro";
import Tag from "@/components/atoms/Tag.astro";
import { COLORS } from "@/constants/color";
---

<Tag text='Links' className='mt-auto gap-1'>
    <ul class='flex gap-3'>
        <li class='w-6'>
            <Link
                href='https://twitter.com/ktym4a_s'
                target='_blank'
                rel='noopener'
                colors={{
                    hoverText: COLORS.GREEN.hoverText as string,
                    focusText: COLORS.GREEN.focusText as string,
                    focusOutline: COLORS.GREEN.focusOutline as string
                }}
                class='block'
                title='x.com'
            >
                <svg
                    xmlns='http://www.w3.org/2000/svg'
                    aria-hidden='true'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
                    <path d='M4 4l11.733 16h4.267l-11.733 -16z'></path>
                    <path d='M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772'></path>
                </svg>
                <span class='sr-only'>x.com</span>
            </Link>
        </li>
        <li class='w-6'>
            <Link
                href='https://github.com/ktym4a'
                target='_blank'
                rel='noopener'
                colors={{
                    hoverText: COLORS.PINK.hoverText as string,
                    focusText: COLORS.PINK.focusText as string,
                    focusOutline: COLORS.PINK.focusOutline as string
                }}
                class='block'
                title='GitHub'
            >
                <svg
                    xmlns='http://www.w3.org/2000/svg'
                    focusable='false'
                    aria-hidden='true'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
                    <path
                        d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5'
                    >
                    </path>
                </svg>
                <span class='sr-only'>GitHub</span>
            </Link>
        </li>
        <li class='w-6'>
            <Link
                href='mailto:shoma@ktym4a.me'
                colors={{
                    hoverText: COLORS.BLUE.hoverText as string,
                    focusText: COLORS.BLUE.focusText as string,
                    focusOutline: COLORS.BLUE.focusOutline as string
                }}
                class='block'
                title='email'
            >
                <svg
                    xmlns='http://www.w3.org/2000/svg'
                    focusable='false'
                    aria-hidden='true'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
                    <path
                        d='M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z'
                    >
                    </path>
                    <path d='M3 7l9 6l9 -6'></path>
                </svg>
                <span class='sr-only'>email</span>
            </Link>
        </li>
    </ul>
</Tag>
